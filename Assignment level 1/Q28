package com.company;

public class LinearSearch {
    public static boolean search(int arr[], int x)
    {
        int n = arr.length;
        for (int i = 0; i < n; i++)
        {
            if (arr[i] == x)
                return true;
        }
        return false;
    }
    public static void main(String args[])
    {
        int arr[] = { 2, 3, 4, 10, 40 };
        int x = 10;
        boolean result = search(arr, x);
        if (result == true)
            System.out.print("Element is present in array");
        else
            System.out.print("Element is not present in the array");
    }
}
